\newglossarystyle{customized_style}{
	% Base style
	\setglossarystyle{listgroup}
	% Customization
	\renewcommand{\glossentry}[2]{
		\item[\glsentryitem{##1}\glstarget{##1}{\glossentryname{##1}$\colon$}]
		\glossentrydesc{##1}\glspostdescription}
}
\setacronymstyle{long-short}
\setglossarystyle{customized_style}


